<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.xwiki.contrib</groupId>
        <artifactId>parent-platform</artifactId>
        <version>14.10</version>
    </parent>
    <groupId>org.xwiki.contrib</groupId>
    <artifactId>macro-mermaid</artifactId>
    <version>1.1</version>
    <name>Mermaid Macro</name>
    <packaging>xar</packaging>
    <description>Generate Diagrams using Mermaid</description>
    <scm>
        <connection>scm:git:git://github.com:xinnj/xwiki-macro-mermaid.git</connection>
        <developerConnection>scm:git:git@github.com:xinnj/xwiki-macro-mermaid.git</developerConnection>
        <url>https://github.com/xinnj/xwiki-macro-mermaid</url>
    </scm>
    <developers>
        <developer>
            <id>xinnj</id>
            <name>Michael Xin</name>
            <email>xinnj@hotmail.com</email>
        </developer>
    </developers>
    <properties>
        <!-- Don't check for API backward-compatibility here since there's no Java code. -->
        <xwiki.revapi.skip>true</xwiki.revapi.skip>

        <!-- The Extension name. If not defined, the <name> property is used -->
        <xwiki.extension.name>Mermaid Macro</xwiki.extension.name>

        <!-- The extension's category -->
        <xwiki.extension.category>macro</xwiki.extension.category>

        <!-- Issue management -->
        <xwiki.release.jira.skip>false</xwiki.release.jira.skip>
        <xwiki.issueManagement.system>github</xwiki.issueManagement.system>
        <xwiki.issueManagement.url>https://github.com/xinnj/xwiki-macro-mermaid/issues</xwiki.issueManagement.url>
    </properties>
    <repositories>
        <repository>
            <id>XWiki Releases</id>
            <url>https://maven.xwiki.org/releases/</url>
        </repository>
    </repositories>
</project>